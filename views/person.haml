%h2= @person.name

- if @person.picture then
	%p
		%img{ src: @person.picture(200) }

%ul
	- @person.relationships.each do |love|
		%li
			%a{ href: "/love/#{love.id}"} 
				with
				= love.them.name
			
%p
	%a.btn{ href: "/love/new?me=#{@person.id}" } Add new love

%p
	%form{ action: "/person/#{@person.id}", method: 'post', onsubmit: 'return confirm("Are you sure?")' }
		%input{ name: '_method', value: 'delete', type: 'hidden' }
		%input.btn.btn-danger{ type: 'submit', value: "Remove #{@person.name}" } 
